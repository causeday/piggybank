<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yunchen.piggybank">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/svg_ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.yunchen.piggybank.MainActivity"
            android:theme="@style/AppTheme.Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.yunchen.piggybank.LoginActivity"/>
        <activity android:name="com.yunchen.piggybank.AddStatementActivity"
            android:parentActivityName="com.yunchen.piggybank.MainActivity"/>
        <activity android:name="com.yunchen.piggybank.AddPlanActivity"
            android:parentActivityName="com.yunchen.piggybank.MainActivity"/>
        <activity android:name="com.yunchen.piggybank.RegisterActivity"/>
        <activity android:name="com.yunchen.piggybank.ResetPwdActivity"
            android:parentActivityName="com.yunchen.piggybank.LoginActivity"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>